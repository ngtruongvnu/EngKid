<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.function.Home">

    <!-- TODO: Mọi người code fragment của mình ở đây -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="top">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_gravity="bottom"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="center">



            <ImageButton

                android:id="@+id/flag"
                android:layout_width="36dp"
                android:layout_height="39dp"
                android:scaleType="fitXY"
                android:src="@drawable/uk_flag"
                android:background="@color/purple_200"
                android:layout_marginRight="71dp"></ImageButton>

            <ImageButton
                android:id="@+id/diamond"
                android:layout_width="31dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                android:src="@drawable/diamond"
                android:background="@color/purple_200"
                android:layout_marginRight="80dp"></ImageButton>

            <ImageButton
                android:id="@+id/shop"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/shop"
                android:background="@color/purple_200"
                android:layout_marginRight="71dp"></ImageButton>

            <ImageButton
                android:id="@+id/heart"
                android:layout_width="31dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                android:src="@drawable/heart"
                android:background="@color/purple_200"
                android:layout_marginRight="27dp"></ImageButton>


        </LinearLayout>
    </FrameLayout>


    <ImageButton
        android:id="@+id/starBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/star"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/lock1Btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/padlock"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/lock2Btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/padlock"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/treasureBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="400dp"
        android:scaleType="fitCenter"
        android:src="@drawable/treasure_1"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/bookBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:scaleType="fitCenter"
        android:src="@drawable/book"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/trophyBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="600dp"
        android:scaleType="fitCenter"
        android:src="@drawable/trophy1"
        android:background="@android:color/transparent"/>

</FrameLayout>