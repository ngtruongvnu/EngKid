<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lesson2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.question.lv1.Question2">

    <include
        android:id="@+id/include"
        layout="@layout/task_progress_bar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Choose the right picture"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/imgBtn1"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    <ImageButton
        android:id="@+id/imgBtn2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/imgBtn3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/imgBtn4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="361dp"
        android:layout_height="413dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:constraint_referenced_ids="imgBtn1, imgBtn2, imgBtn3, imgBtn4"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <ImageButton
        android:id="@+id/speakerBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="144dp"
        android:scaleType="fitCenter"
        android:onClick="onClick"
        android:src="@drawable/loudspeaker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/roboto_medium"
        android:text="coffee"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include" />

    <TextView
        android:id="@+id/textest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:layout_constraintVertical_bias="0.96" />

</androidx.constraintlayout.widget.ConstraintLayout>