<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/vocabularyName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Horse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vocabularyMeaning"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="con ngựa"
        app:layout_constraintBaseline_toBaselineOf="@+id/vocabularyName"
        app:layout_constraintStart_toEndOf="@+id/vocabularyName" />

    <ImageView
        android:id="@+id/pronunciationBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/volume_up"
        app:layout_constraintBottom_toBottomOf="@+id/vocabularyMeaning"
        app:layout_constraintEnd_toStartOf="@+id/detailBtn"
        app:layout_constraintTop_toTopOf="@+id/vocabularyMeaning"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/detailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chi tiết"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@+id/pronunciationBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pronunciationBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>