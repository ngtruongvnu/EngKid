<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.function.ReviewVocabulary"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHỈNH SỬA HỒ SƠ"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            app:civ_border_width="1sp"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/changeProfileImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:text="THAY ẢNH ĐẠI DIỆN"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/editProfileName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:background="@drawable/gray_color__corner_border"
            android:paddingStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Lương Thế Hùng"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/editProfileNameError"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/edit_profile_name_error_message"
            android:textColor="@color/error_color"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/editProfileDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="date"
            android:background="@drawable/gray_color__corner_border"
            android:paddingStart="10dp"
            android:layout_marginTop="6dp"
            android:text="15/03/2002"
            tools:ignore="RtlSymmetry"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/editProfileDateError"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/edit_profile_date_error_message"
            android:textColor="@color/error_color"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/editProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/gray_color__corner_border"
            android:paddingStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Hà nội, Việt nam"
            tools:ignore="RtlSymmetry"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/editProfileAddressError"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/edit_profile_address_error_message"
            android:textColor="@color/error_color"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/editProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/gray_color__corner_border"
            android:paddingStart="10dp"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="6dp"
            android:text="example@gmail.com"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/editProfileEmailError"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/edit_profile_email_error_message"
            android:fontFamily="@font/roboto"
            android:textColor="@color/error_color"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LƯU LẠI"
        android:fontFamily="@font/roboto"
        android:background="@drawable/primary_solid_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HỦY BỎ"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:background="@drawable/primary_button"
        android:layout_marginTop="10dp"/>
</LinearLayout>